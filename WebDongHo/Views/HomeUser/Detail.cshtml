
@model WebDongHo.Models.SanPham


@{
    ViewBag.Title = "Chi Tiết Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}



<link rel="stylesheet" href="~/Content/base.css" />
<link rel="stylesheet" href="~/Content/detail.css" />

<!-- Details -->
<div id="detail">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img id="img__big" src="@Model.ImgUrl" width="400" height="400" alt="">
                <div class="images">
                    <div class="img__small">
                        <img src="@Model.ImgUrl" alt="" class="imgs active">
                        <img src="@Model.ImgUrl1" alt="" class="imgs">
                        <img src="@Model.ImgUrl2 " alt="" class="imgs">
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="info-detail">
                    <div class="info">
                        <h2>Thông Tin Sản Phẩm</h2>
                        <h3>@Model.TenSanPham</h3>
                    </div>
                    <div class="price"
                        <h3>@String.Format("{0:0,0}", Model.KhuyenMai) VND</h3>
                     <h3>@String.Format("{0:0,0}", Model.GiaGoc) VND</h3>

                    </div>
                    <div class="tabs-info">
                        <div class="info-item active">Mô Tả</div>
                        <div class="info-item ">Thông Tin Cơ Bản</div>
                        <div class="info-item ">Xuất Xứ</div>

                    </div>
                    <div class="tabs-info-content">
                        <div class="tab-pane active">
                            <p>@Model.MoTaNgan</p>
                        </div>
                        <div class="tab-pane">
                            <p>@Model.MoTaChiTiet</p>
                        </div>
                        <div class="tab-pane">
                            <p>Đồng hồ Longines L4.860.2.11.7 là đồng hồ thời trang thuộc công ty Fossil có trụ sở tại bang Texas, của Mỹ.</p>
                        </div>
                    </div>


                    <div class="button">
                        <div class="btn">
                            <a href="@Url.Action("ThemGiohang","Giohang", new { @id = @Model.MaSanPham,@strURL=Request.Url.ToString() })" class="cart-icon">
                                <i class="fas fa-shopping-cart"></i>
                                Thêm vào giỏ
                            </a>
                        </div>
                        <div class="btn">
                            <a href="" class="buy-now">Mua Ngay</a>
                        </div>
                    </div>
                    <div style="background:#fff; margin-top: 30px"  class="fb-comments" data-href="http://dongho4aechinhhang.somee.com/" data-width="" data-numposts="10"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@*Xem thêm sản Phẩm*@

<table>
    <div class="container">
        <h2 class="title">Sản Phẩm Khác</h2>
        <div class="row">
            @foreach (var item in ViewBag.SP_Khac)
            {
                <div class="col-4">
                    <a href="@Url.Action("Detail","HomeUser",new{ id=item.MaSanPham  })">
                        <img src="@item.ImgUrl" width="250" height="250" alt="@item.TenSanPham">
                        <h4>@item.TenSanPham</h4>
                        <p class="price">@String.Format("{0:0,0}", item.GiaGoc) VND</p>
                    </a>
                </div>

            }
        </div>
    </div>

</table>


<div class="clear"></div>




