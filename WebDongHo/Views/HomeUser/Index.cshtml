<!-- Sản phẩm mới -->
<div class="container">
    <h2 class="title">New watches</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <a href="@Url.Action("Detail","HomeUser",new{ id=item.MaSanPham  })">
                    <img src="@item.ImgUrl" alt="@item.TenSanPham">
                    <h4>@item.TenSanPham</h4>
                    <p class="price">@String.Format("{0:0,0}", item.GiaGoc) VND</p>
                </a>
            </div>
        }



    </div>
</div>

