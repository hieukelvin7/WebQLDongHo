
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<h4 style="color:white;text-align:center">@ViewBag.ThongBao</h4>

<link rel="stylesheet" href="~/Content/user.css" />

    <div class="container">
        <div class="row">
            <div class="col-2">

            </div>
            <div class="col-2">
                <form action="" method="POST" class="form" id="form-2">
                    <h3 class="heading">Đăng Nhập</h3>
                    <p class="desc">Chào mừng bạn đến với cửa hàng</p>

                    <div class="spacer"></div>

                    <div class="form-group">
                        <label for="fullname" class="form-label">Tên đăng nhập</label>
                        <input id="fullnamelogin" name="TenDN" type="text" placeholder="VD: DucLong123" class="form-control">

                        <span class="form-message"></span>
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input id="password" name="MatKhau" type="password" placeholder="Nhập mật khẩu" class="form-control">
                        <span class="form-message"></span>
                    </div>


                    <button class="form-submit">Đăng Nhập</button>
                    <a href="@Url.Action("DangKy", "NguoiDung")" class="form-submit">Đăng Ký</a>
                    <br />
                    <p style="color:white"> Hoặc có thể đăn nhập bằng</p>

                    <fb:login-button scope="public_profile,email"
                                     onlogin="checkLoginState();">

                    </fb:login-button>

                </form>
            </div>
        </div>

    </div>
