
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<table>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px;color:white">
            <td>Họ tên khách hàng</td>
            <td>
                @Html.TextBox("HoTenKH")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px;color:white">
            <td>Tên đăng nhập</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px;color:white">
            <td>Mật khẩu</td>
            <td>
                <input type="password" required name="MatKhau" size="30"/>
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px;color:white">
            <td>Nhập lại mật khẩu</td>
            <td>
                @Html.Password("NhapLaiMatKhau")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px;color:white">
            <td>Giới tính</td>
            <td>
                
                <input type="radio" name="GioiTinh1" checked /> Nam
                <input type="radio" name="GioiTinh2" /> Nữ

            </td>
        </tr>
        <tr style="height:40px;color:white">
            <td>Địa chỉ</td>
            <td>
                @Html.TextArea("DiaChi");              
            </td>
        </tr>
        <tr style="height:40px;color:white">
            <td>Điện thoại</td>
            <td>
                @Html.TextBox("DienThoai")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px;color:white">
            <td>Email</td>
            <td>
                <input type="email" name="Email" required size="30" />
                @ViewData["Loi5"]
            </td>
        <tr style="height:40px;color:white">
            <td>Ngày sinh</td>
            <td>
                <input type="date" name="NgaySinh" value="" />
                @ViewData["Loi7"]
            </td>
        <tr style="height:40px;color:white">
            <td></td>
            <td>
                <input type="Submit" value="Đăng ký" />
            </td>
        </tr>
        </tr>
        </tr>
    }

</table>

