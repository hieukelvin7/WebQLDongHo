@using WebDongHo.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<h2 style="text-align: center; color: white">THÔNG TIN GIỎ HÀNG</h2> 
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold;color:white">
        <td> Mã sản phẩm </td>
        <td> Tên sản phẩm </td>
        <td> Ảnh bìa </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
        <td width="50px"></td>    
        <td width="50px"></td>    
        <td width="50px"></td>    
    </tr> 
    @foreach (var item in Model) 
    {
<tr style="text-align: center; font-weight: bold; color: white">
    <td> @item.iMasanpham </td>
    <td> @item.sTensanpham</td>
    <td><img src="@item.sAnhbia" style="width:100px"></td>
    @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMasp = item.iMasanpham }))
    {
        <td>
            <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellow"/>
        </td>
        <td>@String.Format("{0:0,0}", @item.dDongia) </td>
        <td>@string.Format("{0:0,0}", @item.dThanhtien) </td>
        <td><a href="@Url.Action("Detail","HomeUser", new { id= item.iMasanpham })">Chi tiết</a></td>
        <td>@Html.ActionLink("Xóa", "XoaGiohang", new { @iMasp = item.iMasanpham })</td>
        <td><input type="submit" value="Cập Nhật"/></td>
    }

</tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">
        <td colspan="4"> Số lượng sách: @ViewBag.Tongsoluong </td>
        <td colspan="5"> Tổng tiền: @string.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr> 
    <tr style="font-weight: bold; text-align:right; color:blue">
        <td colspan="9"> @Html.ActionLink("Xóa Giỏ Hảng", "XoaTatcaGiohang") </td>
    </tr>
</table>

