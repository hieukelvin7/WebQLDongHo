<link rel="stylesheet" href="~/Content/cart.css" />
<div id="cart">
    <div class="container">
        <div class="cart">
            <h2>THÔNG TIN GIỎ HÀNG</h2>
            <table>
                <tr class="cart-info">
                    <td>Mã sản phẩm </td>
                    <td>Tên sản phẩm </td>
                    <td>Ảnh bìa</td>
                    <td>Số lượng </td>
                    <td>Đơn giá </td>
                    <td>Thành tiền </td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr class="cart-sub-info">
                        <td>@item.iMasanpham</td>
                        <td>@item.sTensanpham</td>
                        <td><img src="@item.sAnhbia"></td>
                        @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMasp = item.iMasanpham }))
                        {
                            <td>
                                <input type="number" min="1" max="100" name="txtSoluong" value="@item.iSoluong" />
                            </td>
                            <td>@String.Format("{0:0,0}", @item.dDongia)</td>
                            <td>@string.Format("{0:0,0}", @item.dThanhtien)</td>
                            <td><a href="@Url.Action("Detail", "HomeUser", new { id = item.iMasanpham })">Chi tiết</a></td>
                            <td>@Html.ActionLink("Xóa", "XoaGiohang", new { @iMasp = item.iMasanpham })</td>
                            <td><input type="submit" value="Cập Nhật" class="btn-update"></td>
                        }
                    </tr>
                }
                <tr class="cart-money">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Tổng số lượng: <span>@ViewBag.Tongsoluong</span></td>
                    <td></td>
                    <td>Tổng tiền: <span>@string.Format("{0:0,0}", ViewBag.Tongtien)</span><span>VND</span></td>

                    <td></td>

                </tr>
                <tr class="cart-del">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><button>@Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")</button></td>
                </tr>
                <tr class="cart-checkout">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><button>@Html.ActionLink("ĐẶT HÀNG", "DatHang", "Giohang")</button></td>
                </tr>
            </table>
        </div>
    </div>
</div>
